@page "/HxFilterViewDemo"

<h1>HxFilterView</h1>

<button @onclick="SetRandomFilter">Set random values</button>

<CascadingValue Value="@true" Name="FilterDrawerOpen">
	<HxFilterView>
		<Criteria>
			<HxDateRangeFilter @bind-Value="@Filter.MyDateRange" />
			<HxTextFilter @bind-Value="@Filter.MyText" />
		</Criteria>
	</HxFilterView>
</CascadingValue>

<p>MyDateRange: @Filter.MyDateRange</p>
<p>MyText: @Filter.MyText</p>