@page "/HxGridDemo"

<h1>HxGrid</h1>

<HxGrid Data="@cultureInfos" PageSize="10">
	<Columns>
		<HxGridColumn TItemType="System.Globalization.CultureInfo" HeaderText="Display Name" ItemText="@(item => item.DisplayName)" />
		<HxGridColumn TItemType="System.Globalization.CultureInfo" HeaderText="Name" ItemText="@(item => item.Name)" />		
	</Columns>
	<ContextMenu>
		<HxContextMenu>
			<HxContextMenuItem Title="Nastavit jako výchozí" />
		</HxContextMenu>
	</ContextMenu>
</HxGrid>

@code {
	private List<System.Globalization.CultureInfo> cultureInfos = System.Globalization.CultureInfo.GetCultures(System.Globalization.CultureTypes.SpecificCultures).ToList();
}