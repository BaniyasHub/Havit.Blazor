@namespace Havit.Blazor.Components.Web.Bootstrap
<div class="@CssClassHelper.Combine("card",  (this.Skin ?? CardSkin.Default)?.CssClass, this.CssClass)">
	@if (HeaderTemplate is not null)
	{
		<div class="@CssClassHelper.Combine("card-header",  (this.Skin ?? CardSkin.Default)?.HeaderCssClass, this.HeaderCssClass)">
			@HeaderTemplate
		</div>
	}
	@if (BodyTemplate is not null)
	{
		<div class="@CssClassHelper.Combine("card-body",  (this.Skin ?? CardSkin.Default)?.BodyCssClass, this.BodyCssClass)">
			@BodyTemplate
		</div>
	}
	@if (FooterTemplate is not null)
	{
		<div class="@CssClassHelper.Combine("card-footer",  (this.Skin ?? CardSkin.Default)?.FooterCssClass, this.FooterCssClass)">
			@FooterTemplate
		</div>
	}
</div>