@namespace Havit.Blazor.Components.Web.Bootstrap

<div class="@CssClassHelper.Combine("hx-sidebar", GetCollapsedCssClass(), this.CssClass)">
	<div class="nav-menu d-flex flex-column bg-white flex-grow-1 mh-100">

		@if (HeaderTemplate is not null)
		{
			<div class="hx-sidebar-header d-flex align-items-center">
				@HeaderTemplate
			</div>
		}

		<div class="@CssClassHelper.Combine("hx-sidebar-body flex-column mb-auto", (!Colapsed) ? "overflow-auto": null)">
			<HxNav Orientation="NavOrientation.Vertical" CssClass="ps-0">
				<CascadingValue Value="@Colapsed" TValue="bool" Name="IsSidebarCollapsed">
					@ItemsTemplate
				</CascadingValue>
			</HxNav>
			<div class="hx-sidebar-toggler translate-middle d-none d-md-flex" role="button" @onclick="HandleCollapseToggleClick"
				 @onclick:stopPropagation="true">
				<HxIcon Icon="@(Colapsed ? ExpandIcon : CollapseIcon)" />
			</div>
		</div>

		@if (FooterTemplate is not null)
		{
			<div class="hx-sidebar-footer d-none d-md-flex">
				@FooterTemplate
			</div>
		}
	</div>
</div>