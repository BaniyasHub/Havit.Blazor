@namespace Havit.Blazor.Components.Web.Bootstrap

<div class="@CssClassHelper.Combine("sidebar", GetCollapsedCssClass(), this.CssClass)">
	<div class="nav-menu d-flex flex-column bg-white">

		@if (HeaderTemplate is not null)
		{
			<div class="sidebar-header">
				@HeaderTemplate
			</div>
		}

		<div class="@CssClassHelper.Combine("sidebar-body flex-column mb-auto", (!Colapsed) ? "overflow-auto": null)">
			<HxNav Orientation="NavOrientation.Vertical" CssClass="ps-0">
				<CascadingValue Value="@Colapsed" TValue="bool" Name="IsSidebarCollapsed">
					@ItemsTemplate
				</CascadingValue>
			</HxNav>
			<div class="navbar-toggler translate-middle" role="button" @onclick="HandleCollapseToggleClick"
				 @onclick:stopPropagation="true">
				<HxIcon Icon="@(Colapsed ? ExpandIcon : CollapseIcon)" />
			</div>
		</div>

		@if (FooterTemplate is not null)
		{
			<div class="footer-template d-flex">
				@FooterTemplate
			</div>
		}
	</div>
</div>