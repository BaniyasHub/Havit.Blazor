@namespace Havit.Blazor.Components.Web.Bootstrap
<div class="hx-accordion-item accordion-item">
    <h2 class="accordion-header" id="header-@idEffective">
        <button class="@CssClassHelper.Combine("accordion-button", lastKnownStateIsExpanded ? null : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@idEffective" aria-expanded="@lastKnownStateIsExpanded" aria-controls="collapse-@idEffective">
            @HeaderTemplate
        </button>
    </h2>
    <HxCollapse @ref="collapseComponent"
                Id="@("collapse-" + idEffective)"
                Parent="@(!ParentAccordition.StayOpen ? $"#{ParentAccordition.Id}" : null)"
                CssClass="@CssClassHelper.Combine("accordion-collapse", !isInitialized && IsSetToBeExpanded() ? "show" : null)"
                OnShown="HandleCollapseShown"
                OnHidden="HandleCollapseHidden"
                aria-labelledby="@("header-" + idEffective)">
        <div class="accordion-body">
            @BodyTemplate
        </div>
    </HxCollapse>
</div>