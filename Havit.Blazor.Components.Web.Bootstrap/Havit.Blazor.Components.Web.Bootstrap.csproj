<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <RazorLangVersion>3.0</RazorLangVersion>
	<NoWarn>1701;1702;SA1134</NoWarn>
    <!--<GenerateDocumentationFile>true</GenerateDocumentationFile>-->
  </PropertyGroup>

  <!-- NuGet -->
  <Import Project="../NuGet.targets" />
  <PropertyGroup>
    <PackageVersion>1.0.0-preview01</PackageVersion>
    <Description>HAVIT Blazor Library - Components For Bootstrap4</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Havit.Core" Version="2.0.10" />
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.1.4" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.1.4" />
    <PackageReference Include="Microsoft.Extensions.Localization" Version="3.1.5" />
  </ItemGroup>

  <ItemGroup>
    <None Include="wwwroot\hxbootstrap.js" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Havit.Blazor.Components.Web\Havit.Blazor.Components.Web.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\ButtonSkins.cs.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ButtonSkins.cs.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\ButtonSkins.cs.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>ButtonSkins.cs.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
