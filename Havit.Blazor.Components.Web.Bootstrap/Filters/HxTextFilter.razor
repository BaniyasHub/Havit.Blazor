@namespace Havit.Blazor.Components.Web.Bootstrap
@inherits HxFilterBase
<HxFilter Label="@Label">
	<LabelTemplate>@LabelTemplate</LabelTemplate>
	<FilterTemplate>
		<HxInputText Value="@Value" ValueChanged="HandleValueChanged" ValueExpression="@ValueExpression" />
	</FilterTemplate>
	<ChipTemplate>
		@Value
	</ChipTemplate>
</HxFilter>