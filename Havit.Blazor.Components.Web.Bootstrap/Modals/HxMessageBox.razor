<HxModal @ref="modal" Title="@Title" CssClass="@this.CssClass" ShowCloseButton="@this.ShowCloseButton" OnClosed="HandleModalClosed">
	<HeaderTemplate>
		@HeaderTemplate
	</HeaderTemplate>
	<BodyTemplate>
		@Text
		@BodyTemplate
	</BodyTemplate>
	<FooterTemplate>
		@foreach (var button in GetButtonsToRender())
		{
			<HxButton Text="@button.Text"
					  OnClick="@(() => HandleButtonClick(button.Id))"
					  Settings="@((button.IsPrimary ?? false) ? this.PrimaryButtonSettingsEffective : this.SecondaryButtonSettingsEffective)" />
		}
	</FooterTemplate>
</HxModal>