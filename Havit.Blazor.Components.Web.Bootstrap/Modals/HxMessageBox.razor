<HxModal @ref="modal"
		 CssClass="@this.CssClass"
		 ShowCloseButton="@this.ShowCloseButton"
		 OnClosed="HandleModalClosed">
	<HeaderTemplate>
		@HeaderText
		@HeaderTemplate
	</HeaderTemplate>
	<BodyTemplate>
		@Text
		@ContentTemplate
	</BodyTemplate>
	<FooterTemplate>
		@foreach (var button in GetButtonsToRender())
		{
			<HxButton Text="@button.Text" OnClick="@(() => HandleButtonClick(button.Id))" CssClass="@((button.IsPrimary ?? false) ? "btn-primary" : null)" />
		}
	</FooterTemplate>
</HxModal>