@namespace Havit.Blazor.Components.Web.Bootstrap

<HxMessageBox @ref="messageBox"
			  Title="@request.Title"
			  Text="@request.Text"
			  Buttons="@request.Buttons"
			  PrimaryButton="@request.PrimaryButton"
			  CustomButtonText="@request.CustomButtonText"
			  ShowCloseButton="@request.ShowCloseButton"
			  OnClosed="HandleClosed"
              @attributes="@request.AdditionalAttributes">
	<HeaderTemplate>@request.HeaderTemplate</HeaderTemplate>
	<BodyTemplate>@request.BodyTemplate</BodyTemplate>
</HxMessageBox>