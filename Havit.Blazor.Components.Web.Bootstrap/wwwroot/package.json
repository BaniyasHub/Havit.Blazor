{
    "name": "havit-blazor-components-web-bootstrap",
    "description": "The most popular front-end framework for developing responsive, mobile first projects on the web.",
    "version": "1.0.0",
    "devDependencies": {
        "autoprefixer": "^10.2.5",
        "cross-env": "^7.0.3",
        "find-unused-sass-variables": "^3.1.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.2.8",
        "postcss-cli": "^8.3.1",
        "rtlcss": "^3.1.2",
        "sass": "^1.32.8"
    },
    "scripts": {
        "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css havit-bootstrap/:./ defaults.scss:defaults.css",
        "css-minify": "npm-run-all --parallel css-minify-*",
        "css-minify-main": "cleancss -O1 --format breakWith=lf --with-rebase --source-map --source-map-inline-sources --output . --batch --batch-suffix \".min\" \"./*.css\" \"!*.min.css\" \"!*rtl*.css\"",
        "css-minify-rtl": "cleancss -O1 --format breakWith=lf --with-rebase --source-map --source-map-inline-sources --output . --batch --batch-suffix \".min\" \"*rtl.css\" \"!*.min.css\"",
        "css-prefix": "npm-run-all --parallel css-prefix-*",
        "css-prefix-main": "postcss --config build/postcss.config.js --replace \"*.css\" \"!*.rtl*.css\" \"!*.min.css\"",
        "lint": "npm-run-all --parallel js-lint lockfile-lint",
        "watch-css-main": "nodemon --watch havit-booostrap/ --ext scss --exec \"npm-run-all css-compile css-prefix\""
    }
}