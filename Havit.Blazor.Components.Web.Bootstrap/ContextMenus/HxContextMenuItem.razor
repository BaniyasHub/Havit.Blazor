@namespace Havit.Blazor.Components.Web.Bootstrap
<li class="hx-context-menu-item">
	<a class="dropdown-item" role="button" @onclick="HandleClick" @onclick:stopPropagation="@OnClickStopPropagation">
		@if (GetIcon() != null)
		{
			<HxIcon Icon="GetIcon()" CssClass="me-2" />
		}
		@GetText()
		@ChildContent
	</a>
</li>