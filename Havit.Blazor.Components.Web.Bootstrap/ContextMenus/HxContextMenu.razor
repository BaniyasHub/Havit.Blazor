@namespace Havit.Blazor.Components.Web.Bootstrap
@* PERF!!! Heavily used in data-lists/grids/etc. => do not over-use subcomponents unless absolutely necessary => don't use HxDropdown components here *@
<div class="@CssClassHelper.Combine("hx-context-menu", this.CssClass)">
	<div class="@CssClassHelper.Combine("dropdown", this.DropdownCssClass)">
		<span role="button" class="hx-context-menu-btn" id="@id" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" @onclick:stopPropagation>
			<HxIcon Icon="this.Icon" CssClass="@this.IconCssClass" />
		</span>
		<ul class="@CssClassHelper.Combine("dropdown-menu dropdown-menu-end", this.DropdownMenuCssClass)" aria-labelledby="@id">
			@ChildContent
		</ul>
	</div>
</div>