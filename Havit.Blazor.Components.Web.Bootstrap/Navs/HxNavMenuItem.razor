@namespace Havit.Blazor.Components.Web.Bootstrap
@using Microsoft.AspNetCore.Components.Routing


<li class="nav-item @CssClassHelper.Combine(IsDesktopCollapsed? "desktop-nav-item-collapsed " : null,  IsSubItem ? "sub-item" : null, CssClass)">
	@if (@ChildContent is null)
	{
		<NavLink href="@Href" role="button" class="nav-link p-3" Match="NavLinkMatch.All">
			<div class="d-flex align-items-center">
				@if (Icon != null)
				{
					<HxIcon Icon="Icon" />
				}
				<span class="text ms-3">
					@Text
				</span>
			</div>
		</NavLink>
	}
	else
	{
		<a data-bs-toggle="collapse" class="nav-link p-3" data-bs-target="#@id" href="@Href" role="button" aria-expanded="false">
			<div class="d-flex align-items-center">
				@if (Icon != null)
				{
					<HxIcon Icon="Icon" />
				}
				<span class="text ms-3">
					@Text
				</span>
				<HxIcon Icon="@BootstrapIcon.ChevronRight" CssClass="ms-auto" />
			</div>
		</a>
		<div class="collapse" id="@id">
			<ul class="nav flex-column">
				@ChildContent
			</ul>
		</div>
	}
</li>