@namespace Havit.Blazor.Components.Web.Bootstrap.Internal

<input @ref="InputElement" id="@InputId" type="text" class="@CssClass"
    disabled="@(!EnabledEffective)" autocomplete="false" data-bs-reference="parent" data-bs-offset="@($"[{Offset.Item1},{Offset.Item2}]")" value="@Value"
    @oninput="HandleInput" @onfocus="HandleFocus" @onblur="HandleBlur" @onclick:stopPropagation
    placeholder="@Placeholder" onfocusin="this.select()">

@*onfocusin: cannot use onfocus twice (@onfocus and onfocus) *@