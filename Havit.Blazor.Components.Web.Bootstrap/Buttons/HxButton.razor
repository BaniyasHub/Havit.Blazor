@namespace Havit.Blazor.Components.Web.Bootstrap

@{
	string text = GetText();
}
<button type="@GetButtonType()"
		class="@CssClassHelper.Combine("hx-button", GetColorCssClass(), GetSizeCssClass(), this.Skin?.CssClass, this.CssClass)"
		@onclick="HandleClick" @onclick:stopPropagation="this.OnClickStopPropagation"
		disabled="@(clickInProgress || !CascadeEnabledComponent.EnabledEffective(this))" form="@FormId">

	@if (clickInProgress || ((this.Icon ?? this.Skin?.Icon) is not null))
	{
		if (clickInProgress)
		{
			<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
		}
		else
		{
			<HxIcon Icon="this.Icon ?? this.Skin?.Icon" />
		}

		@if (!String.IsNullOrEmpty(text) || (ChildContent != null))
		{
			<span>&nbsp;</span>
		}
	}

	@text

	@ChildContent
</button>