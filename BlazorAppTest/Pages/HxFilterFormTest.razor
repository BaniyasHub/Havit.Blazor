@page "/HxFilterFormTest"
@using System.Globalization;

<h1>FilterContext</h1>

<HxFilterForm @ref="filterContext" Model="@model" ModelChanged="HandleModelChanged" TModel="FormModel" OnChipsUpdated="HandleChipsUpdated">
	<DataAnnotationsValidator />
	<ValidationSummary />

	<h2>Filter</h2>

	<HxInputText Label="Text1" @bind-Value="@context.Text1" />
	<HxInputText Label="Text2" @bind-Value="@context.Text2" />
	<HxInputText Label="Text3" @bind-Value="@context.Text3" />

	<HxButton Skin="ButtonSkins.Apply" OnClick="HandleApplyClick" />

	<h2>Values</h2>

	<h3>Values in filter</h3>
	<ul>
		<li>Text1: @context.Text1</li>
		<li>Text2: @context.Text2</li>
		<li>Text3: @context.Text3</li>
	</ul>
</HxFilterForm>

<h3>Values in model</h3>
<ul>
	<li>Text1: @model.Text1</li>
	<li>Text2: @model.Text2</li>
	<li>Text3: @model.Text3</li>
</ul>

<h4>Chips</h4>

<HxChipList Chips="@chips" OnChipRemoveClick="HandleChipRemoveClick" />

<HxGrid @ref="myGrid" TItemType="CultureInfo" DataProvider="@ClientCultureInfosDataProvider">
	<Columns>
		<HxGridColumn TItemType="CultureInfo" HeaderText="Display Name" ItemTextSelector="@(item => item.DisplayName)" SortKeySelector="@(item => item.DisplayName)" IsDefaultSortColumn="true" />
		<HxGridColumn TItemType="CultureInfo" HeaderText="Name" ItemTextSelector="@(item => item.Name)" SortKeySelector="@(item => item.Name)" ItemCssClassSelector="@(item => item.Name.Contains('Z') ? "text-end" : null)" />
	</Columns>
</HxGrid>