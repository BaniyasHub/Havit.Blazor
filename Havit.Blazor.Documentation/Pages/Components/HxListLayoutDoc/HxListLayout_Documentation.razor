@attribute [Route("/components/" + nameof(HxListLayout))]

<ComponentApiDoc Type="typeof(HxListLayout<TModel>)">
    <MainContent>
        <DocHeading Title="Basic usage" />
        <Demo Type="typeof(HxListLayout_Demo_Basic)" />

		<DocHeading Title="Virtualized with sticky header" Id="sticky-header" />
		<p>
			Utilize <code>HeaderRowCssClass="sticky-top"</code> in HxGrid to activate a sticky header.
			The <code>HxListLayout</code> comes with all the necessary CSS adjustments included, ensuring that the sticky-header feature functions seamlessly.
		</p>
        <Demo Type="typeof(HxListLayout_Demo_Virtualized)" />

        <DocHeading Title="Title template" />
        <Demo Type="typeof(HxListLayout_Demo_TitleTemplate)" />

        <DocHeading Title="Search" />
        <Demo Type="typeof(HxListLayout_Demo_SearchTemplate)" />

        <DocHeading Title="Named views" />
        <Demo Type="typeof(HxListLayout_Demo_NamedViews)" />

    </MainContent>
    <CssVariables>
        <ComponentApiDocCssVariable Name="--hx-list-layout-table-font-size" Default=".875rem">
            Table font size.
        </ComponentApiDocCssVariable>
    </CssVariables>

</ComponentApiDoc>