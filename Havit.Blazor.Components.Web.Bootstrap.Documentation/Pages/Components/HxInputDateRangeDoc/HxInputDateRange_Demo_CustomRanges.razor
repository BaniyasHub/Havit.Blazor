<HxInputDateRange Label="HxInputDateRange" @bind-Value="value" PredefinedDateRanges="@GetCustomDateRanges()" />

@code {
	private DateTimeRange value;

	private IEnumerable<InputDateRangePredefinedRangesItem> GetCustomDateRanges()
	{
		yield return new InputDateRangePredefinedRangesItem()
		{
			Label = "Today",
			DateRange = new DateTimeRange
			{
				StartDate = DateTime.Today,
				EndDate = DateTime.Today
			}
		};
		yield return new InputDateRangePredefinedRangesItem()
		{
			Label = "Next year",
			DateRange = new DateTimeRange
			{
				StartDate = new DateTime(DateTime.Today.Year + 1, 1, 1),
				EndDate = new DateTime(DateTime.Today.Year + 1, 12, 31)
			}
		};
	}
}
