<HxListGroup>
    @foreach (var color in Enum.GetValues<ThemeColor>())
    {
        <HxListGroupItem Color="color" OnClick="() => HandleClick(color)">@color</HxListGroupItem>
    }
</HxListGroup>
<p class="mt-3">Last click color: @lastClickColor</p>

@code
{
	private ThemeColor? lastClickColor;
	private void HandleClick(ThemeColor color)
	{
		lastClickColor = color;
	}
}
