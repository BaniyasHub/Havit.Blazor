@*Loop through all the button variants*@
@foreach (var color in Enum.GetValues(typeof(ThemeColor)))
{
    @*Exclude the button with no styling*@
    @if ((int)color == 0)
    {
        continue;
    }
    
    <div style="display: inline-block; margin: 0 0.5rem 0.5rem 0;">
        <HxDropdown>
            <HxDropdownToggle Color="(ThemeColor)color">Dropdown button</HxDropdownToggle>
            <HxDropdownMenu>
                <HxDropdownItem Href="#">Link 1</HxDropdownItem>
                <HxDropdownItem Href="#">Link 2</HxDropdownItem>
                <HxDropdownItem Href="#">Link 3</HxDropdownItem>
            </HxDropdownMenu>
        </HxDropdown>
    </div>
}
