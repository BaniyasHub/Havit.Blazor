<EditForm Model="@model">
	<DataAnnotationsValidator />

	<HxInputSwitch Label="Enabled" @bind-Value="@model.Enabled">
		<HintTemplate>
			Toggle the switch to enabled/disable form state.
		</HintTemplate>
	</HxInputSwitch>
	<HxFormState IsEnabled="@model.Enabled">
		<HxInputText Label="Text value" @bind-Value="@model.StringValue" />
		<HxInputCheckBox Label="Bool value" @bind-Value="@model.BooleanValue" />
		<HxSubmit Text="Validate" />
	</HxFormState>

</EditForm>
@code {
	private Model model = new Model();
	private class Model
	{
		public bool Enabled { get; set; } = true;
		
		[Required]
		public string StringValue { get; set; }

		public Boolean BooleanValue { get; set; }
	}
}
