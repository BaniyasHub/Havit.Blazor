<HxModal @ref="smModal" Fullscreen="ModalFullscreen.SmallDown" HeaderText="Fullscreen bellow SM" />
<HxModal @ref="mdModal" Fullscreen="ModalFullscreen.MediumDown" HeaderText="Fullscreen bellow MD" />
<HxModal @ref="lgModal" Fullscreen="ModalFullscreen.LargeDown" HeaderText="Fullscreen bellow LG" />
<HxModal @ref="xlModal" Fullscreen="ModalFullscreen.ExtraLargeDown"  HeaderText="Fullscreen bellow XL" />
<HxModal @ref="xxlModal" Fullscreen="ModalFullscreen.XxlDown" HeaderText="Fullscreen bellow XXL" />
<HxModal @ref="xl2Modal" Fullscreen="ModalFullscreen.ExtraLargeDown" Size="ModalSize.Large" HeaderText="Fullscreen bellow XL (otherwise L)" />

<HxButton OnClick="() => smModal.ShowAsync()" Color="ThemeColor.Primary" CssClass="me-1 mb-1">Fullscreen bellow SM</HxButton>
<HxButton OnClick="() => mdModal.ShowAsync()" Color="ThemeColor.Primary" CssClass="me-1 mb-1">Fullscreen bellow MD</HxButton>
<HxButton OnClick="() => lgModal.ShowAsync()" Color="ThemeColor.Primary" CssClass="me-1 mb-1">Fullscreen bellow LG</HxButton>
<HxButton OnClick="() => xlModal.ShowAsync()" Color="ThemeColor.Primary" CssClass="me-1 mb-1">Fullscreen bellow XL</HxButton>
<HxButton OnClick="() => xxlModal.ShowAsync()" Color="ThemeColor.Primary" CssClass="me-1 mb-1">Fullscreen bellow XXL</HxButton>
<HxButton OnClick="() => xl2Modal.ShowAsync()" Color="ThemeColor.Primary" CssClass="me-1 mb-1">Fullscreen bellow XL (otherwise L)</HxButton>

@code
{
	private HxModal smModal;
	private HxModal mdModal;
	private HxModal lgModal;
	private HxModal xlModal;
	private HxModal xxlModal;
	private HxModal xl2Modal;
}