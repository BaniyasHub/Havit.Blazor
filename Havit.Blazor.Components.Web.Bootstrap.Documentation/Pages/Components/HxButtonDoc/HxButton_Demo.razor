<h5>Button with an icon</h5>
<p>
	<HxButton Icon="@BootstrapIcon.Bootstrap" Color="ThemeColor.Primary" Text="Go" />
</p>

<h5>Button with a badge</h5>
<p>
	<HxButton Color="ThemeColor.Primary">
		Send all <span class="badge bg-secondary">15</span>
	</HxButton>
</p>

<h5>Button with a custom css class</h5>
<p>
	<HxButton Color="ThemeColor.Primary" CssClass="border border-danger border-3" Text="border border-danger border-3" />
</p>

<h5>Button with a (standard) skin</h5>
<p>
	<HxButton Skin="@ButtonSkins.OK" />
	<HxButton Skin="@ButtonSkins.Save" />
	<HxButton Skin="@ButtonSkins.Cancel" />
</p>

<h5>Button with a custom skin</h5>
<p>
	<HxButton Skin="@CustomButtonSkins.Demo" />
</p>

<h5>Button sizes</h5>
<p>
	<HxButton Text="Small" Size="ButtonSize.Small" Color="ThemeColor.Primary" />
	<HxButton Text="Regular" Size="ButtonSize.Regular" Color="ThemeColor.Primary" />
	<HxButton Text="Large" Size="ButtonSize.Large" Color="ThemeColor.Primary" />
</p>

<h5>OnValidClick with spinner</h5>
<EditForm Model="testModel">
	@* Your form with validations goes here *@
	<HxSubmit Text="Submit" Color="ThemeColor.Primary" OnValidClick="async () => await Task.Delay(1000)" />
	<HxButton Text="Save & Print" Color="ThemeColor.Secondary" OnValidClick="async () => await Task.Delay(2000)" />
</EditForm>

<h5>Disable spinner</h5>
<HxButton Spinner="false" Text="No spinner" OnClick="async () => await Task.Delay(2000)" Color="ThemeColor.Info" />

<h5>Manual spinner</h5>
<HxButton Spinner="showSpinner" Text="The button" OnClick="async () => await Task.Delay(2000)" Color="ThemeColor.Warning" />
<HxButton Text="showSpinner=true" OnClick="() => showSpinner = true" Color="ThemeColor.Success" />
<HxButton Text="showSpinner=false" OnClick="() => showSpinner = false" Color="ThemeColor.Danger" />


@code {
	bool showSpinner;

	public class CustomButtonSkins
	{
		public static ButtonSkin Demo { get; } = new ButtonSkin() { Text = "Welcome", Icon = BootstrapIcon.Heart, Color = ThemeColor.Danger };
	};

	private TestModel testModel = new TestModel();

	public class TestModel
	{
	}
}