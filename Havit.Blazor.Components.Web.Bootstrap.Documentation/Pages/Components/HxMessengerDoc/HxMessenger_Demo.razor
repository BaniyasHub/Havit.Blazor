<HxButton Text="Show information" OnClick="HandleAddInformationButtonClick" />
<HxButton Text="Show warning" OnClick="HandleAddWarningButtonClick" />
<HxButton Text="Show error" OnClick="HandleAddErrorButtonClick" />

@code { 
	[Inject] protected IMessenger Messenger { get; set; }

	protected override void OnAfterRender(bool firstRender)
	{
		base.OnAfterRender(firstRender);

		if (firstRender)
		{
			Messenger.AddInformation($"Welcome to the {nameof(HxMessenger)} documentation!");
		}
	}

	private void HandleAddInformationButtonClick()
	{
		Messenger.AddInformation("All your data has been encrypted. To decrypt your data share $100 with all your teammates.");
	}

	private void HandleAddWarningButtonClick()
	{
		Messenger.AddWarning("Bio hazard detected in your office!");
	}

	private void HandleAddErrorButtonClick()
	{
		Messenger.AddError("An error occurred during showing messenger message.");
	}
}
