@*Loop through all the colors for the spinner*@
@foreach (var color in Enum.GetValues(typeof(ThemeColor)))
{
    @*Following colors aren't available for the HxSpinner, so they are excluded*@
    @if ((ThemeColor)color == ThemeColor.None || (ThemeColor)color == ThemeColor.Link)
    {
        continue;
    }

    <div style="display: inline-block; margin-right: 0.5rem;">
        <HxSpinner Type="SpinnerType.Grow" Color="(ThemeColor)color" />
    </div>
}
