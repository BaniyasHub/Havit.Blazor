@attribute [Route("/components/" + nameof(HxChipList))]

<ComponentApiDoc Type="typeof(HxChipList)">
    <MainContent>
        <Demo Type="typeof(HxChipList_Demo)" Tabs="false" />
    </MainContent>
    <CssVariables>
        <ComponentApiDocCssVariable Name="--hx-chiplist-chip-margin" Default="0.75rem 0.25rem .375rem 0">
            Margin of the chips.
        </ComponentApiDocCssVariable>
        <ComponentApiDocCssVariable Name="--hx-chiplist-chip-remove-btn-margin" Default="0 0 0 .25rem">
            Margin of chip remove button.
        </ComponentApiDocCssVariable>
        <ComponentApiDocCssVariable Name="--hx-chiplist-chip-label-font-weight" Default="400">
            Font weight of chip label.
        </ComponentApiDocCssVariable>
        <ComponentApiDocCssVariable Name="--hx-chiplist-chip-label-margin" Default="400">
            Margin of chip label.
        </ComponentApiDocCssVariable>
    </CssVariables>

</ComponentApiDoc>